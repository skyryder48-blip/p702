{
  "name": "free-knowledge",
  "version": "0.1.0",
  "description": "Modular research engine for biographical and contextual intelligence",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "npx prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "setup": "node scripts/setup.mjs",
    "test:engine": "tsx src/test/engine-test.ts",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:health": "curl -s http://localhost:3000/api/health/db | npx json",
    "db:reset": "npx prisma db push --force-reset && npm run db:seed",
    "postinstall": "npx prisma generate"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.0.0",
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "next": "^14.2.0",
    "next-auth": "^4.24.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/uuid": "^9.0.0",
    "prisma": "^5.22.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0"
  }
}
