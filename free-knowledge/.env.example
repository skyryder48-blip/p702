# ============================================================
# free-civics — Environment Variables
#
# Copy this file to .env.local for development:
#   cp .env.example .env.local
#
# For production, set these in your hosting provider's
# environment configuration (Vercel, Railway, etc.)
# ============================================================

# --- Authentication -------------------------------------------

# Auth provider: "nextauth" for production, "stub" for local dev (skips auth)
NEXT_PUBLIC_AUTH_PROVIDER=stub

# Force a specific tier in development (free | premium | institutional)
# Remove or leave empty in production
NEXT_PUBLIC_FORCE_TIER=free

# REQUIRED in production — JWT signing key
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# Canonical app URL (no trailing slash)
NEXTAUTH_URL=http://localhost:3000

# --- OAuth Providers (optional) ------------------------------
# Register at https://console.cloud.google.com/ (Google)
# Register at https://github.com/settings/developers (GitHub)

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# --- Database ------------------------------------------------

# PostgreSQL connection string
# Local dev:   postgresql://postgres:postgres@localhost:5432/freecivics
# Neon (prod): postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/freecivics?sslmode=require
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/freecivics

# --- Government APIs -----------------------------------------

# Congress.gov API (required) — register at https://api.congress.gov/sign-up/
CONGRESS_API_KEY=

# FEC campaign finance API (recommended) — register at https://api.open.fec.gov/developers/
FEC_API_KEY=

# Google Civic Information API (recommended) — enable in Google Cloud Console
GOOGLE_CIVIC_API_KEY=

# --- Optional Services ---------------------------------------

# Anthropic Claude API — for AI synthesis features
ANTHROPIC_API_KEY=

# GNews API — for news aggregation
NEWS_API_KEY=
